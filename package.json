{
  "name": "boilit",
  "version": "0.1.0",
  "description": "A CLI tool to apply module refs from Git repositories into your project",
  "main": "dist/cli.js",
  "bin": {
    "boilit": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "prepare": "npm run build",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "cli",
    "git",
    "module",
    "boilerplate",
    "templates"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guibais/boil-it.git"
  },
  "bugs": {
    "url": "https://github.com/guibais/boil-it/issues"
  },
  "homepage": "https://github.com/guibais/boil-it#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "provenance": true
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "execa": "^5.1.1",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.7",
    "ora": "^5.4.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.5",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist"
  ]
}
